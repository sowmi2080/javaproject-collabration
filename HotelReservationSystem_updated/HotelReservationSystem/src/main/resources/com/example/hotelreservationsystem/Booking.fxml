<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hotelreservationsystem.BookingController">
   <children>
      <ImageView fitHeight="401.0" fitWidth="606.0">
         <image>
            <Image url="@../../../images/beach.jpg" />
         </image>
      </ImageView>
      <AnchorPane layoutX="211.0" layoutY="39.0" opacity="0.9" prefHeight="362.0" prefWidth="395.0" style="-fx-background-color: #CCFFFF; -fx-border-color: #0000FF;">
         <children>
            <Label layoutX="163.0" layoutY="6.0" text="Booking">
               <font>
                  <Font name="System Bold Italic" size="18.0" />
               </font>
            </Label>
            <AnchorPane layoutX="158.0" layoutY="31.0" prefHeight="3.0" prefWidth="79.0" style="-fx-background-color: #0000FF;">
               <effect>
                  <Reflection />
               </effect>
            </AnchorPane>
            <Label layoutX="11.0" layoutY="45.0" text="Customer Details" textAlignment="CENTER" underline="true">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="customerNameField" layoutX="14.0" layoutY="69.0" opacity="0.8" prefHeight="25.0" prefWidth="217.0" promptText="Customer Name" style="-fx-background-radius: 95;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="customerEmailField" layoutX="14.0" layoutY="99.0" opacity="0.8" prefHeight="25.0" prefWidth="217.0" promptText="Customer Email" style="-fx-background-radius: 95;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="customerContactField" layoutX="14.0" layoutY="130.0" opacity="0.8" prefHeight="25.0" prefWidth="217.0" promptText="Customer Phone No." style="-fx-background-radius: 95;">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <Label layoutX="11.0" layoutY="174.0" text="Room Details" textAlignment="CENTER" underline="true">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <RadioButton fx:id="twoBedField" layoutX="14.0" layoutY="200.0" mnemonicParsing="false" text="2-Bed" />
            <RadioButton fx:id="fourBedField" layoutX="78.0" layoutY="200.0" mnemonicParsing="false" text="4-Bed" />
            <RadioButton fx:id="familyField" layoutX="142.0" layoutY="200.0" mnemonicParsing="false" text="Family" />
            <RadioButton fx:id="vipField" layoutX="205.0" layoutY="200.0" mnemonicParsing="false" text="VIP" />
            <DatePicker fx:id="checkInField" layoutX="108.0" layoutY="230.0" prefHeight="17.0" prefWidth="123.0" />
            <Text layoutX="9.0" layoutY="247.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Check In Date :" />
            <Text layoutX="9.0" layoutY="287.0" strokeType="OUTSIDE" strokeWidth="0.0" text="No. of Persons :" />
            <TextField fx:id="noOfPaxField" layoutX="110.0" layoutY="270.0" prefHeight="25.0" prefWidth="123.0" />
            <Button layoutX="136.0" layoutY="320.0" mnemonicParsing="false" onMouseClicked="#confirmBooking" prefHeight="25.0" prefWidth="123.0" style="-fx-background-color: #0000FF;" text="Confirm Booking" textFill="WHITE">
               <font>
                  <Font name="System Bold Italic" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="42.0" prefWidth="606.0" style="-fx-background-color: #0099FF; -fx-border-color: black;">
         <children>
            <Button layoutX="35.0" layoutY="6.0" mnemonicParsing="false" onMouseClicked="#openHomePage" style="-fx-background-color: #0099FF;" text="HOME">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button layoutX="250.0" layoutY="6.0" mnemonicParsing="false" onMouseClicked="#openRoomPackagesPage" style="-fx-background-color: #0099FF;" text="Room &amp; Packages">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button layoutX="452.0" layoutY="6.0" mnemonicParsing="false" onMouseClicked="#openPaymentPage" style="-fx-background-color: #0099FF;" text="Payment">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button layoutX="382.0" layoutY="6.0" mnemonicParsing="false" onMouseClicked="#openBookingPage" style="-fx-background-color: #0099FF;" text="Booking">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button layoutX="535.0" layoutY="7.0" mnemonicParsing="false" onMouseClicked="#openSignOutPage" style="-fx-background-color: #0099FF;" text="SignOut">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
            <Button layoutX="177.0" layoutY="6.0" mnemonicParsing="false" onMouseClicked="#openAboutUsPage" style="-fx-background-color: #0099FF;" text="About us">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <ImageView fitHeight="25.0" fitWidth="21.0" layoutX="12.0" layoutY="8.0">
               <image>
                  <Image url="@../../../images/logo2.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
